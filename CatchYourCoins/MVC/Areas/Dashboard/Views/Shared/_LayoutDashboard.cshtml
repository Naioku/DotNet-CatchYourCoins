<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - MVC</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/MVC.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="Dashboard" asp-controller="Home" asp-action="Show">MVC</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Dashboard" asp-controller="Home" asp-action="Show">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Dashboard" asp-controller="ControllerExpenseCategory" asp-action="Index">Expense categories</a>
                        <a class="nav-link text-dark" asp-area="Dashboard" asp-controller="ControllerExpenseCategory" asp-action="Create">Create expense categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Dashboard" asp-controller="Expense" asp-action="Create">Create expenses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Dashboard" asp-controller="Income" asp-action="Create">Create incomes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Dashboard" asp-controller="Balance" asp-action="Show">Balance</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Dashboard" asp-controller="Settings" asp-action="Show">Settings</a>
                    </li>
                    <li>
                        <span class="nav-link text-dark">Hello @User.Identity!.Name</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Public" asp-controller="Account" asp-action="Logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
