@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Application.Account.Commands.CommandRegister

@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form asp-controller="Account" asp-action="Register">
    <div>
        <label asp-for="UserName">Name</label>
        <input asp-for="UserName"/>
        <span asp-validation-for="UserName"></span>
    </div>
    <div>
        <label asp-for="Email">Email</label>
        <input asp-for="Email"/>
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password">Password</label>
        <input asp-for="Password"/>
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="PasswordConfirmation">PasswordConfirmation</label>
        <input asp-for="PasswordConfirmation"/>
        <span asp-validation-for="PasswordConfirmation"></span>
    </div>
    <button type="submit" >Register</button>

    <div asp-validation-summary="ModelOnly"></div>
</form>